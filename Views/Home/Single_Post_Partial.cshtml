@model QA_Project.Models.User_Post
@{
    Layout = null;
}

<div id="content" style="
    padding-left: 0px;
    border-left-width: 0px;
    margin-left: 0px;
    padding-right: 0px;
    padding-top: 10PX;" class="snippet-hidden">

    <div itemprop="mainEntity" itemscope="" itemtype="http://schema.org/Question">

        <div class="inner-content clearfix">

            <div id="mainbar" role="main" aria-label="question and answers">

                <div class="grid">
                    <div class="grid fl1 mb24">
                        <h1 class="grid--cell fs-headline1 mb0">
                            @Html.ActionLink(Model.Title, "AllFollowedPost", new { post_id = @Model.Id }, new { @class = "question-hyperlink" })
                        </h1>
                    </div>

                </div>

                <div class="question" data-questionid="58860454" id="question">

                    <style>
                        .everyoneloves__top-leaderboard:empty,
                        .everyoneloves__mid-leaderboard:empty,
                        .everyoneloves__bot-mid-leaderboard:empty {
                            margin-bottom: 0;
                        }
                    </style>

                    <div class="post-layout">
                        <div class="votecell post-layout--left">


                            <div class="js-voting-container grid fd-column ai-stretch gs4 fc-black-200" data-post-id="58860454">
                                <a href="@Url.Action("Upvote","Home",new { post_id = @Model.Id })" class="js-vote-up-btn grid--cell s-btn s-btn__unset c-pointer" title="This question shows research effort; it is useful and clear" aria-pressed="false" aria-label="up vote" data-selected-classes="fc-theme-primary">
                                    <svg aria-hidden="true" class="svg-icon m0 iconArrowUpLg" width="36" height="36" viewBox="0 0 36 36">
                                        <path d="M2 26h32L18 10 2 26z"></path>
                                    </svg>
                                </a>
                                <div class="js-vote-count grid--cell fc-black-500 fs-title grid fd-column ai-center" itemprop="upvoteCount" data-value="0">@Model.Voted_Count</div>
                                <a href="@Url.Action("Downvote",new { post_id = @Model.Id })" class="js-vote-down-btn grid--cell s-btn s-btn__unset c-pointer" title="This question does not show any research effort; it is unclear or not useful" aria-pressed="false" aria-label="down vote" data-selected-classes="fc-theme-primary">
                                    <svg aria-hidden="true" class="svg-icon m0 iconArrowDownLg" width="36" height="36" viewBox="0 0 36 36">
                                        <path d="M2 10h32L18 26 2 10z"></path>
                                    </svg>
                                </a>

                                <button class="js-favorite-btn s-btn s-btn__unset c-pointer py8 js-gps-track" aria-pressed="false" aria-label="favorite" data-selected-classes="fc-yellow-600" data-gps-track="post.click({ item: 1, priv: 0, post_type: 1 })">
                                    <svg aria-hidden="true" class="svg-icon iconStar" width="18" height="18" viewBox="0 0 18 18">
                                        <path d="M9 12.65l-5.29 3.63 1.82-6.15L.44 6.22l6.42-.17L9 0l2.14 6.05 6.42.17-5.1 3.9 1.83 6.16L9 12.65z">
                                        </path>
                                    </svg>
                                    <div class="js-favorite-count mt8" data-value=""></div>
                                </button>


                            </div>

                        </div>


                        <!-- Question discription here....-->

                        <div class="excerpt">
                            @Model.Discription
                            <svg aria-hidden="true" class="svg-icon va-text-bottom o50 iconPencilSm clickable" width="14" height="14" viewBox="0 0 14 14">
                                <path d="M11.1 1.71l1.13 1.12c.2.2.2.51 0 .71L11.1 4.7 9.21 2.86l1.17-1.15c.2-.2.51-.2.71 0zM2 10.12l6.37-6.43 1.88 1.88L3.88 12H2v-1.88z">
                                </path>

                            </svg>
                            @Html.ActionLink("edit", "Edit", "User_Post", new { id = @Model.Id }, new { @class = "att" })

                            <style>
                                .att {
                                    visibility: hidden;
                                }

                                .clickable:hover {
                                    background-color: #cfdfeb;
                                }
                            </style>

                            <script>
                                var main = document.querySelector(".snippet-hidden");
                                main.addEventListener('click', function (e) {
                                    if (e.target.nodeName == "svg") {
                                        console.log(e.target.nodeName);
                                        console.log();
                                        var a = e.target.nextElementSibling;
                                        if (a) {
                                            window.open(a.getAttribute('href'), "_self");
                                        }

                                    } else if (e.target.nodeName == "path") {
                                        console.log(e.target.nodeName);

                                        console.log(e.target.nodeName);
                                        console.log();
                                        var a = e.target.parentNode.nextElementSibling;
                                        if (a) {
                                            window.open(a.getAttribute('href'), "_self");
                                        }

                                    }
                                });
                            </script>
                        </div>
                    </div>
                    @{
                        Html.RenderAction("AllTags", new { post_id = Model.Id });
                    }


                    <div class="mb0 ">

                    </div>

                </div>

                <div class="started fr">
                    <div class="user-info user-hover">
                        <div class="user-action-time">
                            asked <span title="2019-11-14 14:56:16Z" class="relativetime">1 min ago</span>
                        </div>
                        <div class="user-gravatar32">
                            <a href="#">
                                <div class="gravatar-wrapper-32">
                                    <img src="https://www.gravatar.com/avatar/1861f9453d0aae6608c8520c1461ad16?s=32&amp;d=identicon&amp;r=PG"
                                         alt="" width="32" height="32" class="bar-sm">
                                </div>
                            </a>
                        </div>
                        <div class="user-details">
                            UDetails.. Html componnent
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>



</div>
